upstream devpi {
    server 127.0.0.1:3141;
}

server {
    listen        80;
    server_name   {{ pypi_server_name }};

    rewrite       ^(.*) https://{{ pypi_server_name}}$1 permanent;
}

server {
    listen        443;
    server_name   pypi.vandelay.io;

    ssl                 on;
    ssl_certificate     /etc/nginx/ssl/vandelay.io.crt;
    ssl_certificate_key  /etc/nginx/ssl/vandelay.io.key;

    keepalive_timeout    70;
    client_max_body_size 5m;

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/errors.log;

    location / {
        # This is a pattern in nginx which allows us to use the htpasswd
        # approach and proxy back a hardcoded header to the upstream server

        # must be set to pypi otherwise, python setup.py sdist register will
        auth_basic           "pypi";
        auth_basic_user_file  /etc/nginx/conf.d/pypi-htpasswd;

        proxy_pass http://devpi;
        proxy_redirect off;
        proxy_buffering off;
        proxy_set_header Host $host;

        # proxy_set_header Authorization "{{ upstream_auth_hdr | default }}";

        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
